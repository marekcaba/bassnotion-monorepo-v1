{
  "installCommand": "npm install",
  "buildCommand": "npx nx build @bassnotion/contracts && npx nx build @bassnotion/frontend",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 