{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.*.config.ts",
    "vitest.config.*.ts",
    "webpack.config.js",
    "nest-cli.json"
  ]
}
